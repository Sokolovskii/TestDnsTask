<div class="modal fade" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="AddLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="AddModalLabel">Добавление записи</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="nameModalAdd" class="col-form-label">Имя:</label>
                        <input type="text" class="form-control" id="nameModalAdd">
                    </div>
                    <div class="form-group">
                        <label for="positionModalAdd" class="col-form-label">Должность:</label>
                        <input type="text" class="form-control" id="positionModalAdd">
                    </div>
                    <div class="form-group">
                        <label for="tableNumberModalAdd" class="col-form-label">Табельный номер:</label>
                        <input type="text" class="form-control" id="tableNumberModalAdd">
                    </div>
                    <div class="form-group">
                        <label for="orderModalAdd" class="col-form-label">Отдел:</label>
                        <input type="text" class="form-control" id="orderModalAdd">
                    </div>
                    <div class="form-group">
                        <label for="managerNumberModalAdd" class="col-form-label">Табельный номер руководителя:</label>
                        <input type="text" class="form-control" id="managerNumberModalAdd">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button type="submit" id="AddSubmit" class="btn btn-primary">Сохранить изменения</button>
            </div>
        </div>
    </div>
</div>
