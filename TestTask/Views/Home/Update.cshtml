<div class="modal fade" id="UpdateModal" tabindex="-1" role="dialog" aria-labelledby="UpdateLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="UpdateModalLabel">Редактирование записи</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group" style="display:none">
                        <label for="idModalUpdate" class="col-form-label">Id:</label>
                        <input type="text" class="form-control" id="idModalUpdate">
                    </div>
                    <div class="form-group">
                        <label for="nameModalUpdate" class="col-form-label">Имя:</label>
                        <input type="text" class="form-control" id="nameModalUpdate">
                    </div>
                    <div class="form-group">
                        <label for="positionModalUpdate" class="col-form-label">Должность:</label>
                        <input type="text" class="form-control" id="positionModalUpdate">
                    </div>
                    <div class="form-group">
                        <label for="tableNumberModalUpdate" class="col-form-label">Табельный номер:</label>
                        <input type="text" class="form-control" id="tableNumberModalUpdate">
                    </div>
                    <div class="form-group">
                        <label for="orderModalUpdate" class="col-form-label">Отдел:</label>
                        <input type="text" class="form-control" id="orderModalUpdate">
                    </div>
                    <div class="form-group">
                        <label for="managerNumberModalUpdate" class="col-form-label">Табельный номер руководителя:</label>
                        <input type="text" class="form-control" id="managerNumberModalUpdate">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button type="submit" id="UpdateSubmit" class="btn btn-primary">Сохранить изменения</button>
            </div>
        </div>
    </div>
</div>
